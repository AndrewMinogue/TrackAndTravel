<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/routeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageIcon"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/routeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageIcon"
            android:layout_marginTop="17dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/routeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routeEnd"
            android:textColor="@color/black"
            android:paddingTop="3dp"
            android:layout_below="@id/routeStart" />


        <TextView
            android:id="@+id/FavouriteString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/routeEnd"
            android:layout_marginTop="3dp"
            android:paddingTop="3dp"
            android:text="@string/route_favourite"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/favourited"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/FavouriteString"
            android:layout_marginTop="-3dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>