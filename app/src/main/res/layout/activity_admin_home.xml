<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assignment.trackandtravel.views.trackandtravel.trackandtraveladmin.MainAdminView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:elevation="0dip"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/colorPrimary" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/passengerword"
                    android:layout_width="184dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginBottom="252dp"
                    android:hint="@string/hint_firststop"
                    android:inputType="none"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="Create New Route"
                    android:textColor="#000005"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/adminword"
                    android:layout_width="167dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="256dp"
                    android:layout_marginBottom="92dp"
                    android:hint="@string/hint_firststop"
                    android:inputType="none"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="Create Bus Driver"
                    android:textColor="#000005"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/busdriverword"
                    android:layout_width="178dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginBottom="92dp"
                    android:hint="@string/hint_firststop"
                    android:inputType="none"
                    android:maxLength="300"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="Create Admin User"
                    android:textColor="#000005"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/busroutes"
                    android:layout_width="166dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="244dp"
                    android:layout_marginBottom="252dp"
                    android:hint="@string/hint_firststop"
                    android:inputType="none"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="View All Routes"
                    android:textColor="#000005"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="146dp"
                    android:layout_height="121dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/capture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/CreateRoutes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="64dp"
                    android:layout_marginBottom="296dp"
                    android:src="@drawable/create"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/ViewRoutes"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="112dp"
                    android:layout_marginEnd="72dp"
                    android:layout_marginBottom="296dp"
                    android:src="@drawable/viewall"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/passenger" />

                <ImageView
                    android:id="@+id/CreateDriver"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="112dp"
                    android:layout_marginEnd="64dp"
                    android:layout_marginBottom="148dp"
                    android:src="@drawable/createbus"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/passenger" />

                <ImageView
                    android:id="@+id/CreateAdmin"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="64dp"
                    android:layout_marginBottom="148dp"
                    android:src="@drawable/createadmin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>