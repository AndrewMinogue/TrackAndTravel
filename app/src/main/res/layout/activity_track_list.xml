<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assignment.trackandtravel.views.trackandtravel.trackandtravellist.MainDriverView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:elevation="0dip"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/colorPrimary" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="View Timetable"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="Search for a bus"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:paddingTop="20dp"
                    android:text="Review Bus"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/DisplayRoutes"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginBottom="30dp"
                    android:text="Display Bus Routes"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>